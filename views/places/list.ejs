<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>

<h3 class="py-3 my-0 fs-1 bg-light"><%= title %></h3>


<% if (results) { %>


    <main class="bg-light">
        <div class="container py-5 px-3">
          <div class="row row-cols-1 row-cols-md-2 row-cols-xl-3 g5 px-sm-5 px-4">
            <% results.forEach(outing => { %>
              <div class="col">
                <div class="card bg-dark shadow-sm mt-3">
                  
                    <img
                      class="card-img-top"
                      src="https://maps.googleapis.com/maps/api/place/photo?photo_reference=<%=outing.photos[0].photo_reference%>&maxwidth=4032&maxheight=3024&key=<%=process.env.API_KEY%>"
                      atl="Generic Museum Image"
                      width="100%"
                      height="170"
                    />
                    <span><%="..........................................................................."%></span>
                 
                  <div class="card-body">
                    <p class="card-title fs-4 text-light"><%= outing.name %></p>
                    <p class="card-text fs-5 text-light">Rating: <%= outing.rating %></p>
                    <p class="card-text mb-1 fs-5 text-light">Address:<%= outing.formatted_address %></p>
                    
                    
                    <%# This is where our outing show UI will go %> 
                    <a href="/places/<%= outing.place_id %>" class="btn btn-primary">Details</a>
                  </div>
                </div>
              </div>
            <% }) %>
          </div>
        </div>
      </main>
      <% } %> 

<%- include('../partials/footer') %>