<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>

<h3 class="py-3 my-0 fs-1 bg-light"><%= title %></h3>


<% if (places) { %>


    <main class="bg-light">
        <div class="container py-5 px-3">
          <div class="row row-cols-1 row-cols-md-2 row-cols-xl-3 g5 px-sm-5 px-4">
            <% places.forEach(place => { %>
              <div class="col">
                <div class="card bg-dark shadow-sm mt-3">
                  
                    <img
                      class="card-img-top"
                      src="https://i.imgur.com/CSU4Cgt.png"
                      atl="Generic Museum Image"
                      width="100%"
                      height="170"
                    />
                 
                  <div class="card-body">
                    <p class="card-title fs-4 text-light"><%= place.name %></p>
                    <p class="card-text fs-5 text-light">Rating: <%= place.rating %></p>
                    <p class="card-text mb-1 fs-5 text-light">Address:<%= place.formatted_address %></p>
                    
                    
                    <%# This is where our places show UI will go %> 
                    <a href="/collections/<%= place.placesId %>" class="btn btn-primary">Details</a>
                  </div>
                </div>
              </div>
            <% }) %>
          </div>
        </div>
      </main>
      <% } %> 

<%- include('../partials/footer') %>